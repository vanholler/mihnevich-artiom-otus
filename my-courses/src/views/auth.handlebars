<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half is-offset-one-quarter">
        <div class="box tabs-container">
          <div class="tabs">
            <ul>
              <li {{#unless isLoginError}} class="is-active" {{/unless}} onclick="switchTab(event)">
                <a>Sign up</a>
              </li>
              <li {{#if isLoginError}} class="is-active" {{/if}} onclick="switchTab(event)">
                <a>Log in</a>
              </li>
            </ul>
          </div>
          <div class="tabs-content">
            <form {{#unless isLoginError}} class="is-active" {{/unless}} action="/auth/register" method="post">
              {{#if message}}
              <p class="has-text-danger mb-3">
                <span class="icon">
                  <i class="fa fa-exclamation-triangle"></i>
                </span>

                {{message}}
              </p>
              {{/if}}
              <div class="field">
                <div class="control has-icons-left">
                  <input type="text" class="input" placeholder="Full Name" name="name" required>
                  <span class="icon is-small is-left">
                    <i class="fa fa-user"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <div class="control has-icons-left">
                  <input type="email" class="input" placeholder="E-mail" name="email" required>
                  <span class="icon is-small is-left">
                    <i class="fa fa-envelope"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <div class="control has-icons-left">
                  <input type="password" class="input" placeholder="Password" name="password" required>
                  <span class="icon is-small is-left">
                    <i class="fa fa-lock"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <button class="button is-success">
                  Register
                </button>
              </div>
            </form>
            <form {{#if isLoginError}} class="is-active" {{/if}} method="post" action="/auth/login">
              {{#if message}}
              <p class="has-text-danger mb-3">
                <span class="icon">
                  <i class="fa fa-exclamation-triangle"></i>
                </span>

                {{message}}
              </p>
              {{/if}}
              <div class="field">
                <div class="control has-icons-left">
                  <input type="email" class="input" name="email" placeholder="E-mail" required>
                  <span class="icon is-small is-left">
                    <i class="fa fa-envelope"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <div class="control has-icons-left">
                  <input type="password" class="input" name="password" placeholder="Password" required>
                  <span class="icon is-small is-left">
                    <i class="fa fa-lock"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <button class="button is-success">
                  Login
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>